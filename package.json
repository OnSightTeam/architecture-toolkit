{
  "name": "architecture-toolkit",
  "version": "1.0.1",
  "description": "Comprehensive toolkit for validating software architecture, SOLID principles, design patterns, and clean code practices",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "arch-toolkit": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "node --loader ts-node/esm src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "architecture",
    "solid",
    "clean-code",
    "design-patterns",
    "clean-architecture",
    "code-review",
    "linter",
    "validator",
    "claude",
    "claude-code",
    "claude-plugin",
    "mcp",
    "agent",
    "static-analysis",
    "testing-strategy",
    "package-design",
    "refactoring"
  ],
  "claude-plugin": {
    "name": "architecture-toolkit",
    "version": "1.0.1",
    "mcp-server": "dist/mcp-server.js"
  },
  "author": "Mykola Chaban",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.61"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/architecture-toolkit.git"
  }
}
